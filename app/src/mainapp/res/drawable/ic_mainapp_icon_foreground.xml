<svg width="512" height="512" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg">
  <!-- Background layer - gradient green -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4CAF50;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#388E3C;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="iconGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FFFFFF;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E8F5E8;stop-opacity:1" />
    </linearGradient>
    <filter id="shadow">
      <feDropShadow dx="0" dy="4" stdDeviation="8" flood-opacity="0.2"/>
    </filter>
  </defs>

  <!-- Background circle with adaptive icon safe area -->
  <rect x="0" y="0" width="512" height="512" rx="108" fill="url(#bgGradient)"/>

  <!-- SMS Gateway Icon -->
  <g transform="translate(256, 256)" filter="url(#shadow)">
    <!-- Phone/Mobile device outline -->
    <rect x="-60" y="-90" width="120" height="180" rx="12"
          fill="url(#iconGradient)"
          stroke="#2E7D32"
          stroke-width="3"/>

    <!-- Screen area -->
    <rect x="-50" y="-75" width="100" height="130" rx="4"
          fill="#E8F5E8"
          stroke="#2E7D32"
          stroke-width="1"/>

    <!-- SMS Message bubbles -->
    <!-- Left message (received) -->
    <rect x="-40" y="-60" width="35" height="25" rx="12"
          fill="#FFFFFF"/>

    <!-- Right message (sent) -->
    <rect x="5" y="-30" width="35" height="25" rx="12"
          fill="#81C784"/>

    <!-- Left message 2 -->
    <rect x="-40" y="0" width="35" height="25" rx="12"
          fill="#FFFFFF"/>

    <!-- Signal waves -->
    <g transform="translate(70, -70)">
      <path d="M 0 0 Q -10 -10, -20 0 Q -10 10, 0 20"
            fill="none"
            stroke="#FFFFFF"
            stroke-width="3"
            stroke-linecap="round"
            opacity="0.8"/>
      <path d="M -8 -8 Q -14 -14, -22 -8 Q -14 -2, -8 4"
            fill="none"
            stroke="#FFFFFF"
            stroke-width="2"
            stroke-linecap="round"
            opacity="0.6"/>
    </g>

    <!-- Home button indicator -->
    <circle cx="0" cy="65" r="8"
            fill="#2E7D32"
            opacity="0.6"/>

    <!-- SMS text indicator -->
    <text x="0" y="-45"
          font-family="Arial, sans-serif"
          font-size="12"
          font-weight="bold"
          fill="#2E7D32"
          text-anchor="middle">SMS</text>
  </g>

  <!-- Subtle glow effect -->
  <circle cx="256" cy="256" r="140" fill="none" stroke="#FFFFFF" stroke-width="1" opacity="0.1"/>
</svg>