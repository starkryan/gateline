<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Include app preferences and configuration -->
    <include domain="sharedpref" path="app_prefs.xml" />

    <!-- Exclude sensitive device-specific data from backup -->
    <exclude domain="sharedpref" path="device_prefs.xml" />
    <exclude domain="database" path="device_database.db" />
    <exclude domain="file" path="device_data/" />
    <exclude domain="file" path="logs/" />

    <!-- Include user settings but exclude authentication tokens -->
    <include domain="sharedpref" path="user_settings.xml" />
    <exclude domain="sharedpref" path="auth_tokens.xml" />
</full-backup-content>