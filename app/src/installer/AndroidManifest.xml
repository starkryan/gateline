<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Remove all SMS and Phone permissions from installer variant -->
    <uses-permission android:name="android.permission.READ_SMS" tools:node="remove" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" tools:node="remove" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" tools:node="remove" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" tools:node="remove" />

    <!-- Remove foreground service permissions from installer variant -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" tools:node="remove" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE" tools:node="remove" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" tools:node="remove" />

    <!-- Remove boot receiver permission from installer variant -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" tools:node="remove" />

    <!-- Essential permissions for downloading -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />

    <!-- No hardware requirements -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <application
        android:name=".SMSGatewayApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name_installer"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EarnBySMS"
        tools:replace="android:label,android:theme,android:allowBackup"
        tools:targetApi="31">

        <!-- Remove MainActivity from installer variant to prevent double launcher icons -->
        <activity
            android:name="com.earnbysms.smsgateway.presentation.activity.MainActivity"
            tools:node="remove" />

        <!-- Remove all SMS gateway services from installer variant -->
        <service
            android:name="com.earnbysms.smsgateway.service.SMSGatewayService"
            tools:node="remove" />

        <!-- Remove all SMS gateway receivers from installer variant -->
        <receiver
            android:name="com.earnbysms.smsgateway.receiver.SMSReceiver"
            tools:node="remove" />
        <receiver
            android:name="com.earnbysms.smsgateway.receiver.BootReceiver"
            tools:node="remove" />

        <!-- Only Installer Activity - exclude main app MainActivity -->
        <activity
            android:name="com.earnbysms.smsgateway.presentation.activity.InstallerMainActivity"
            android:exported="true"
            android:label="@string/app_name_installer"
            android:theme="@style/Theme.EarnBySMS">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- FileProvider for secure APK installation -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Note: SMS Gateway Service and Receivers are NOT included in installer variant -->

    </application>

</manifest>