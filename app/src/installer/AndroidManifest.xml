<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Installer-specific permissions (minimal set) -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />

    <!-- Network permissions for device registration -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Installation permissions -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <!-- Storage permissions for device info and APK download (conditional) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <!-- Hardware Feature Declaration -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="true" />

    <application
        android:name=".SMSGatewayApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name_installer"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EarnBySMS"
        tools:replace="android:label,android:theme,android:allowBackup"
        tools:targetApi="31">

        <!-- Remove MainActivity from installer variant to prevent double launcher icons -->
        <activity
            android:name="com.earnbysms.smsgateway.presentation.activity.MainActivity"
            tools:node="remove" />

        <!-- Only Installer Activity - exclude main app MainActivity -->
        <activity
            android:name="com.earnbysms.smsgateway.presentation.activity.InstallerMainActivity"
            android:exported="true"
            android:label="@string/app_name_installer"
            android:theme="@style/Theme.EarnBySMS">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- FileProvider for secure APK access -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Note: SMS Gateway Service and Receivers are NOT included in installer variant -->

    </application>

</manifest>