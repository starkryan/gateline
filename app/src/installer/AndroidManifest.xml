<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Installer-specific permissions (minimal set) -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />

    <!-- Network permissions for device registration -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Storage permissions for device info (conditional) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- Hardware Feature Declaration -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="true" />

    <application
        android:name=".SMSGatewayApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name_installer"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EarnBySMS"
        tools:replace="android:label,android:theme"
        tools:targetApi="31">

        <!-- Installer Activity -->
        <activity
            android:name="com.earnbysms.smsgateway.presentation.activity.InstallerMainActivity"
            android:exported="true"
            android:label="@string/app_name_installer"
            android:theme="@style/Theme.EarnBySMS">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Note: SMS Gateway Service and Receivers are NOT included in installer variant -->

    </application>

</manifest>