<svg width="512" height="512" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg">
  <!-- Background layer - gradient blue -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2196F3;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1976D2;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="iconGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FFFFFF;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E3F2FD;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Background circle with adaptive icon safe area -->
  <rect x="0" y="0" width="512" height="512" rx="108" fill="url(#bgGradient)"/>

  <!-- Download icon -->
  <g transform="translate(256, 256)">
    <!-- Cloud shape -->
    <path d="M -80 -20 C -80 -50, -60 -70, -30 -70 C -25 -90, 0 -100, 20 -95 C 30 -100, 50 -90, 50 -70 C 70 -70, 80 -50, 80 -30 C 80 -10, 70 10, 50 10 L -60 10 C -80 10, -90 -10, -90 -30 C -90 -25, -88 -22, -85 -20 Z"
          fill="url(#iconGradient)"
          stroke="#FFFFFF"
          stroke-width="2"/>

    <!-- Download arrow -->
    <line x1="0" y1="-20" x2="0" y2="40"
          stroke="#1976D2"
          stroke-width="8"
          stroke-linecap="round"/>

    <!-- Arrow head -->
    <polyline points="-20,20 0,40 20,20"
              fill="none"
              stroke="#1976D2"
              stroke-width="8"
              stroke-linecap="round"
              stroke-linejoin="round"/>

    <!-- Progress bar at bottom -->
    <rect x="-40" y="60" width="80" height="8" rx="4" fill="#FFFFFF" opacity="0.3"/>
    <rect x="-40" y="60" width="50" height="8" rx="4" fill="#FFFFFF"/>
  </g>

  <!-- Subtle shadow effect -->
  <ellipse cx="256" cy="450" rx="100" ry="20" fill="#000000" opacity="0.1"/>
</svg>